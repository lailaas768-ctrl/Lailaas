  <style>
    :root{ --bg:#0f1724; --card:#0b1220; --accent:#ef7f6b; --text:#e6eef6; }
    html,body{height:100%;margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial;color:var(--text);background:linear-gradient(180deg,#061025, #09172a);-webkit-font-smoothing:antialiased;}
    .center{display:flex;align-items:center;justify-content:center;height:100%;padding:20px;box-sizing:border-box;}
    .content{max-width:900px;width:100%;background:rgba(255,255,255,0.02);border-radius:14px;padding:28px;box-shadow:0 10px 30px rgba(2,6,23,0.6);text-align:center;}
    h1{margin:0 0 8px;font-size:28px}
    p{margin:6px 0 18px;color:rgba(255,255,255,0.75)}
    /* Password overlay */
    .overlay{position:fixed;inset:0;background:linear-gradient(180deg, rgba(2,6,23,0.95), rgba(2,6,23,0.98));display:flex;align-items:center;justify-content:center;z-index:9999}
    .box{background:var(--card);padding:26px;border-radius:12px;min-width:300px;max-width:420px;text-align:center;box-shadow:0 20px 50px rgba(2,6,23,0.6);}
    .box input[type="password"]{width:100%;padding:12px 14px;border-radius:8px;border:1px solid rgba(255,255,255,0.06);background:rgba(255,255,255,0.02);color:var(--text);outline:none;font-size:16px;box-sizing:border-box;}
    .box button{margin-top:12px;padding:10px 14px;border-radius:8px;border:none;background:var(--accent);color:#071019;font-weight:600;cursor:pointer;font-size:15px;}
