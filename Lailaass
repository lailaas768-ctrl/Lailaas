    /* Invisible audio (no player) */
    audio[hidden]{display:none;}
    /* Tap-to-enable fallback */
    .tap-enable{position:fixed;left:10px;bottom:12px;background:rgba(0,0,0,0.45);backdrop-filter:blur(4px);color:#fff;padding:8px 10px;border-radius:999px;font-size:13px;z-index:9998;cursor:pointer;display:none;}
    /* Simple content after unlock */
    .locked-message{font-size:15px;color:rgba(255,255,255,0.9);}
