<body>
  <!-- Hidden audio element -->
  <audio id="bg-audio" loop playsinline webkit-playsinline crossorigin="anonymous" preload="auto" hidden>
    <!-- Replace src with your audio file URL (mp3). Make sure CORS allows playback from Glitch host. -->
    <source src="https://cdn.freesound.org/sounds/456789/download/456789__example-music.mp3" type="audio/mpeg">
    <!-- Fallback text -->
    Your browser does not support the audio element.
  </audio>

  <!-- Tap to enable sound (shown only if autoplay blocked) -->
  <div id="tapEnable" class="tap-enable" title="Enable sound">ðŸ”Š Tap to enable sound</div>

  <!-- Password overlay -->
  <div id="overlay" class="overlay">
    <div class="box">
      <h2>Site Protected</h2>
      <p class="hint">Site kholne ke liye password darj karein</p>
      <input id="pwInput" type="password" placeholder="Password dalein" autocomplete="off" />
      <button id="pwBtn">Open</button>
      <div id="pwError" class="hint" style="color:#ffb4b4;display:none;margin-top:10px;">Galat password â€” dobara koshish karein</div>
      <div style="margin-top:12px;font-size:12px;color:rgba(255,255,255,0.5)">Background music bina player ke chal rahi hogi (agar browser allow kare)</div>
    </div>
  </div>

  <!-- Main page content (hidden until correct password) -->
  <div class="center">
    <div class="content" id="mainContent" aria-hidden="true" style="display:none;">
      <h1>Welcome</h1>
      <p class="locked-message">Yeh private content hai â€” aap password daalkar dekhiye.</p>
      <p>Apna content yahan paste karein â€” photos, text, links, etc.</p>
    </div>
  </div>

  <script>
    (function(){
      // === CONFIG ===
      // Set your password here (simple client-side password; not secure for sensitive data)
      const PASSWORD = "1234"; // <-- change this to your password
      // Set to true to remember unlocked state in localStorage (so user won't re-enter on same device)
      const REMEMBER = true;
      const STORAGE_KEY = "site_unlocked_v1";

      const overlay = document.getElementById('overlay');
      const pwInput = document.getElementById('pwInput');
      const pwBtn = document.getElementById('pwBtn');
      const pwError = document.getElementById('pwError');
      const mainContent = document.getElementById('mainContent');

      const audio = document.getElementById('bg-audio');
      const tapEnable = document.getElementById('tapEnable');

      // Attempt autoplay on load
      function tryAutoplay(){
        // set a comfortable volume
        try { audio.volume = 0.35; } catch(e){}
        const p = audio.play();
        if (p !== undefined) {
          p.then(()=> {
            // autoplay succeeded
            tapEnable.style.display = 'none';
          }).catch(()=> {
            // autoplay failed â€” show small tap prompt
            tapEnable.style.display = 'block';
          });
        }
      }

      // Resume audio via user gesture (fallback)
      function enableAudioByTap(){
        // Some browsers require AudioContext resume first - try both
        try {
          if (window.AudioContext || window.webkitAudioContext) {
            const AC = window.AudioContext || window.webkitAudioContext;
            if (!window._myAC) window._myAC = new AC();
            // resume if suspended
            if (window._myAC.state === 'suspended') window._myAC.resume && window._myAC.resume();
          }
        } catch(e){}
        audio.play().then(()=> {
          tapEnable.style.display = 'none';
        }).catch(()=> {
          // still blocked; keep the prompt visible
          tapEnable.style.display = 'block';
        });
      }

      // Password check
      function unlock(){
        const val = pwInput.value;
        if (val === PASSWORD){
          pwError.style.display = 'none';
          // hide overlay and show content
          overlay.style.display = 'none';
          mainContent.style.display = 'block';
          mainContent.setAttribute('aria-hidden','false');
          if (REMEMBER) localStorage.setItem(STORAGE_KEY, '1');
        } else {
          pwError.style.display = 'block';
          // small shake animation could be added; for now focus input
          pwInput.focus();
        }
      }

      // Event listeners
      pwBtn.addEventListener('click', unlock);
      pwInput.addEventListener('keydown', function(e){
        if (e.key === 'Enter') unlock();
      });

      tapEnable.addEventListener('click', function(){ enableAudioByTap(); });

      // If previously unlocked (and REMEMBER true), skip password
      if (REMEMBER && localStorage.getItem(STORAGE_KEY) === '1'){
        overlay.style.display = 'none';
        mainContent.style.display = 'block';
        mainContent.setAttribute('aria-hidden','false');
      }

      // Try autoplay after small delay to improve chance on some devices
      window.addEventListener('load', function(){
        // Try to autoplay once
        tryAutoplay();
        // Also try resume on first touch anywhere, but keep overlay hidden logic separate
        function oneTouchStart(){ 
          enableAudioByTap();
          window.removeEventListener('touchstart', oneTouchStart, true);
          window.removeEventListener('click', oneTouchStart, true);
        }
        window.addEventListener('touchstart', oneTouchStart, true);
        window.addEventListener('click', oneTouchStart, true);
      });
    })();
  </script>
</body>
